<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/start"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_create"
        android:layout_below="@+id/img_logo"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_round_text_blue"
        android:text="@string/create_wallet"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_below="@+id/tv_create"
        android:layout_width="270dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_round_text_green1"
        android:text="@string/login"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            
            <RelativeLayout
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/bg_round_edit_gray3"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="7dp"
                    android:src="@mipmap/yes"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/read_agree"
                android:textSize="12sp"
                android:textColor="@color/textGray"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/service_privacy"
                android:textColor="@color/textBlue"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright"
            android:textColor="@color/textGray1"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>